<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>{{title}}</title>
    <meta name="description" content="{{description}}">

    <meta name="viewport" content="width=device-width, user-scalable=1, initial-scale=1">
    <meta name="msapplication-tap-highlight" content="no">

    <!-- build:css css/style.min.css -->
    <link rel="stylesheet" href="bower_components/normalize-css/normalize.css">
    <link rel="stylesheet" href="css/style.css?v1.0.0">
    <!-- endbuild -->

    <link rel="icon" type="image/png" href="img/favicon/favicon-16x16.png" sizes="16x16">
  </head>
  <body class="atomic">
    <header role="banner">
      {{> logo}}
      {{> nav}}
    </header>

    <main role="main">
      {% body %}
    </main>

    {{#is 'index' this.basename}}
      {{> footer}}
    {{/is}}

    {{#any 'index' this.basename}}
    <script src="js/lib/scrollmagic.js?v1.0.0"></script>
    <script src="js/src/scrollmation-config.js?v1.0.0"></script>
    <script src="js/lib/prism.js?v1.0.0"></script>
    <script src="js/src/atomic-swatch.js?v1.0.0"></script>
    {{/any}}
    
    {{#any 'index' this.basename}}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="bower_components/jquery/dist/jquery.js"><\/script>')</script>
    {{/any}}

    {{#any 'index' this.basename}}
    <script class="atomic-js">$('button').on('click', function() {
  console.log('hello world');
})</script>
    {{/any}}

    {{#is 'index' this.basename}}
    <!-- build:js js/build/builder.min.js -->
    <!-- still dependent on jQuery -->
    <script src="js/src/atomic-generator.js?v1.0.0"></script>
    <!-- endbuild -->
    {{/is}}

  </body>
</html>